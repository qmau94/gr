                    \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                              \n                      \n                    \n                  \n                                    Âm thanh\n                    \n                      \n                                               \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                              \n                      \n                    \n                  \n                                    Hiệu năng\n                    \n                      \n                                               \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                              \n                      \n                    \n                  \n                                    Pin\n                    \n                      \n                                               \n                 