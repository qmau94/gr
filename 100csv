                                   \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                              \n                      \n                    \n                  \n                                    Tính năng\n                    \n                      \n                                               \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                              \n                      \n                    \n                  \n                                    Hiệu năng\n                    \n                      \n                                               \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                                \n                                              \n                      \n                    \n       